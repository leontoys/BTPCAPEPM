{
 "name": "mycapapp",
 "version": "1.0.0",
 "description": "A simple CAP project.",
 "dependencies": {
  "@sap/cds": "^9",
  "express": "^4",
  "@sap/xssec": "^4"
 },
 "devDependencies": {
  "@cap-js/sqlite": "^2"
 },
 "scripts": {
  "start": "cds-serve"
 },
 "private": true,
 "cds": {
  "requires": {
   "db": {
    "kind": "sqlite",
    "credentials": {
     "url": "db.sqlite"
    }
   },
   "auth" :   { 
    "[production]" : {
    "kind": "xsuaa" 
   },
   "[development]": {
    "strategy" : "mock",
    "users" : {
        "liyon" :{
           "roles" : ["Viewer"]
        },
        "marx" : {
           "roles" : ["Editor"]
        }
    }
   }}
  }
 }
}
