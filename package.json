{
  "name": "mycapapp",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2"
  },
  "scripts": {
    "start": "cds-serve"
  },
  "private": true,
  "cds": {
    "requires": {
      "[development]": {
      "db": "sqlite",
        "auth": {
          "strategy": "mock",
          "users": {
            "liyon": {
              "roles": [
                "Viewer"
              ],
              "userAttributes": {
                "BankName": [
                  "My Bank of San Francisco"
                ],
                "Country": [
                  "US"
                ]
              }
            },
            "marx": {
              "roles": [
                "Editor",
                "Viewer"
              ],
              "userAttributes": {
                "BankName": [
                  "My Bank of San Francisco"
                ],
                "Country": [
                  "DE"
                ]
              }
            }
          }
        }
      },
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      }
    }
  }
}